{
  "name": "card-shader",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build:shaders": "node scripts/build-shaders.js",
    "dev": "npm run build:shaders && serve -p 8080",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:update": "playwright test --update-snapshots",
    "test:unit": "node --test tests/unit/**/*.test.js",
    "test:unit:coverage": "node --test --experimental-test-coverage tests/unit/**/*.test.js",
    "test:unit:watch": "node --test --watch tests/unit/**/*.test.js"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@shaderfrog/glsl-parser": "^6.1.0",
    "serve": "^14.2.0"
  }
}
